{
  "name": "tfg-node",
  "version": "0.9.0",
  "description": "Trabajo de fin de grado con Node, Firebase y TailWind",
  "main": "index.js",
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "crypto-js": "^4.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "firebase-admin": "^9.5.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/crypto-js": "^4.0.1",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "autoprefixer": "^10.2.5",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "start": "node ./dist",
    "dev": "npm run lint && npm run build && node ./dist",
    "build": "npm run lint && tsc && npm run css && copyfiles -u 1 src/**/* -e '**/*.ts' -e 'src/public/estilo.css' dist/",
    "lint": "eslint --ext .ts src/ --no-error-on-unmatched-pattern",
    "css": "postcss src/public/estilo.css -o dist/public/estilo.css",
    "dbInit": "node ./dist/scripts/baseDatos"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuisPFdez/TFG-Node.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuisPFdez/TFG-Node/issues"
  },
  "homepage": "https://github.com/LuisPFdez/TFG-Node#readme"
}
