<% if ( existe ) { %>
<form action="/admin/usuarios" method="post">
    <input type="text" name="codigo" readonly id="" value="<%= usuario.codUsuario %>"> <br>
    <input type="text" name="descripcion" readonly id="" value="<%= usuario.descripcion %>"><br>
    <input type="text" name="tipo" readonly id="" value="<%= usuario.tipo %>"><br>
    <button type="submit" name="volver">Volver</button>
</form>
<% } else { %>
    <p>El usuario, <%= codigo %>, no existe </p>
<% } %>